<!-- views/post.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= post.title %></title>
</head>
<body>
  <h1><%= post.title %></h1>
  <p><%= post.content %></p>
  <a href="/posts/<%= post.id %>/edit">Edit</a>
  <form action="/posts/<%= post.id %>/delete" method="post">
    <button type="submit">Delete</button>
  </form>
</body>
</html>
