<!-- views/posts.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Posts</title>
</head>
<body>
  <h1>Posts</h1>
  <ul>
    <% for (let post of posts) { %>
      <li><a href="/posts/<%= post.id %>"><%= post.title %></a></li>
    <% } %>
  </ul>
  <a href="/posts/create">Create Post</a>
</body>
</html>
